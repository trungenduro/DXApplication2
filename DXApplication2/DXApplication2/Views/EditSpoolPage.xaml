<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXApplication2.Views.EditSpoolPage"
               xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:views="clr-namespace:DXApplication2.Views;assembly=DXApplication2" BindingContextChanged="ContentPage_BindingContextChanged"
             Title="EditSpoolPage">
    <dx:DXScrollView>
        <dx:DXStackLayout ItemSpacing="24" Margin="16">
            <dx:DXStackLayout ItemSpacing="8">
                <dx:TextEdit LabelText="SpoolNo" Text="{Binding Item.SpoolNo}" />
                <dx:TextEdit LabelText="Size" Text="{Binding Item.Size}" />
                <dx:TextEdit LabelText="ShapeType" Text="{Binding Item.ShapeType}" />
                <dx:TokenEdit LabelText="data" ItemsSource="{Binding Item.Sheet.ThickNessList}"  />
              
            </dx:DXStackLayout>

            <dx:DXButton Content="Save" Command="{Binding SaveCommand}" />
        </dx:DXStackLayout>
    </dx:DXScrollView>
</ContentPage>