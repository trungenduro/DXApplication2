<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DXApplication2.Views.ItemEditing3Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dx="http://schemas.devexpress.com/maui"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    Title="Edit Product"
    ios:Page.UseSafeArea="True"
    HideSoftInputOnTapped="True">

    <ContentPage.Resources>
        <Style x:Key="HeaderText" TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontFamily" Value="Roboto Medium" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="TextColor" Value="{dx:ThemeColor Key=OnSurface}" />
        </Style>
    </ContentPage.Resources>

    <dx:DXScrollView>
        <dx:DXStackLayout Margin="16,0" ItemSpacing="16">
           

            <dx:DXButton
                Margin="0,8"
                ButtonType="Accent" Clicked="DXButton_Clicked"
                Content="Delete" />
        </dx:DXStackLayout>
    </dx:DXScrollView>
</ContentPage>