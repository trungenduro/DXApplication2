<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXApplication2.Views.NewPeopleView"
               xmlns:dx="http://schemas.devexpress.com/maui" 
             Title="検査員追加">
    <ContentPage.ToolbarItems>


        <ToolbarItem Text="Create" IconImageSource="delete.svg" Command="{Binding DeleteCommand}" />
        <ToolbarItem Text="Create" IconImageSource="save.svg"  Command="{Binding SaveCommand}" />


    </ContentPage.ToolbarItems>
    <VerticalStackLayout HorizontalOptions="Center" Margin="10,10,10,10" >

        <dx:TextEdit MinimumWidthRequest="200" x:Name="name" LabelText="名前" Text="{Binding Item.Name}" />
     
    </VerticalStackLayout>
      
        
        
</ContentPage>