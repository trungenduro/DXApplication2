<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXApplication2.Views.NewSpoolPage"
               xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:views="clr-namespace:DXApplication2.Views;assembly=DXApplication2" BindingContextChanged="ContentPage_BindingContextChanged"
             Title="NewSpoolPage">
    <dx:DXScrollView>
        <dx:DXStackLayout ItemSpacing="24" Margin="16">
            <dx:DXStackLayout ItemSpacing="8">
                <Label Text="{Binding DataControlContext.DataControlContext.DataControlContext}"/>
                <Grid ColumnDefinitions="*,60">
                    
                    <dx:TextEdit LabelText="SpoolNo" Text="{Binding Item.SpoolNo}" />
                    <dx:DXButton Content="camera" Clicked="DXButton_Clicked" />
                </Grid>
                <dx:ComboBoxEdit LabelText="Size" ItemsSource="{Binding DataControlContext.DataControlContext.DataControlContext.Sizes}"  />
                <dx:TextEdit LabelText="ShapeType" Text="{Binding Item.ShapeType}" />
                <dx:TokenEdit LabelText="A"  ItemsSource="{Binding DataControlContext.Item.ThickNessList}"  />
              
            </dx:DXStackLayout>

            <dx:DXButton Content="Save" Command="{Binding SaveCommand}" />
        </dx:DXStackLayout>
    </dx:DXScrollView>
</ContentPage>