             x:Class="DXApplication2.Views.OrderFilterTemplate"
              xmlns:dx="http://schemas.devexpress.com/maui" IconImageSource="filter"
             Title="オーダーフィルター">
    <VerticalStackLayout>
        <VerticalStackLayout>

            
            <dx:FilterChipGroupItem
         FieldName="客先名"
