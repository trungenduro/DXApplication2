<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXApplication2.Views.SheetEditPage" 
           
                xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:converters="clr-namespace:DXApplication2.Converters"  
             BindingContextChanged="ContentPage_BindingContextChanged"
             xmlns:views="clr-namespace:DXApplication2.Views;assembly=DXApplication2"
              xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             Title="{Binding Item.SheetNo,StringFormat='シートNo.{0}'}">
    <ContentPage.Resources>
        <converters:SpoolToImageConverter x:Key="ImageEnumConverter" />
        <converters:SpoolToChartDataConverter x:Key="ChartDataConverter" />
     
            <dxc:SeriesCrosshairOptions x:Key="lineSeriesHintOptions"
                               PointTextPattern="{}{S}: {V}M"
                               ShowInLabel="True"
                               AxisLabelVisible="True"
                               AxisLineVisible="True"/>
      
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
       
        <ToolbarItem Text="管追加" IconImageSource="addSpool.svg" Command="{Binding Source={x:Reference spoolGrid}, Path=Commands.ShowDetailNewItemForm}" />
        <!--<ToolbarItem Text="Delete" IconImageSource="delete.png" Command="{Binding DeleteCommand}"/>-->
        <ToolbarItem Text="Save" IconImageSource="save.svg" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
  
        <Grid Background="AliceBlue">
            <dx:DXCollectionView x:Name="spoolGrid" ItemsSource="{Binding Item.Spools}" DetailEditFormTemplate="{DataTemplate views:EditSpoolPage}" 
                                 ItemSpanCount="1" ValidateAndSave="collectionView_ValidateAndSave" 
                                 Tap="spoolGrid_Tap"
                                 DetailNewItemFormTemplate="{DataTemplate views:NewSpoolPage}" >
                        <dx:DXCollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Grid>
                                       
                                        <dx:DXToolbar Padding="0" HeightRequest="30" Margin="0,-15,0,0" BackgroundColor="Transparent" WidthRequest="30" HorizontalOptions="End">
                                            <dx:ToolbarButton Padding="0"  WidthRequest="30" Margin="-5,10,5,5" HeightRequest="30" VerticalContentAlignment="End"   Icon="edit.png"  FontSize="10" 
Command="{Binding Source={x:Reference spoolGrid}, Path=Commands.ShowDetailEditForm}" 
CommandParameter="{Binding .}"
/>
                                            <!--<dx:ToolbarButton Content="{Binding Source={RelativeSource AncestorType=ContentPage},Path=BindingContext.DataControlContext}"                                       
CommandParameter="{Binding .}"                                        />-->

                                        </dx:DXToolbar>

                                    </Grid>
                                    <dx:DXBorder BorderColor="Red" BorderThickness="2" VerticalOptions="Start"
                          CornerRadius="5"
                          Padding="0"
                          Margin="2">
                                        <Grid  MinimumHeightRequest="150" ColumnDefinitions="2*,5*,*" RowDefinitions="*,5*">

                                            <Grid Grid.Row="1"   />

                                            <Label Padding="5" Text="{Binding SpoolNo}" FontSize="17" Grid.ColumnSpan="1" HorizontalOptions="Center" />

                                            <Image Grid.Row="1"  Source="{Binding  Converter={StaticResource ImageEnumConverter}}" />

                                            <Label Padding="0" Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="良" FontSize="15" FontAttributes="Bold"/>

                                <dxc:ChartView Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="6" Margin="0" HeightRequest="100"  HorizontalOptions="Center" VerticalOptions="Center">

                                    <dxc:ChartView.Series>
                                        <dxc:BarSeries PointColorizer="{views:CustomColorizer}" DisplayName="test}" >
                                            
                                            

                                                <dxc:BarSeries.Data>
                                                <dxc:SeriesDataAdapter  DataSource="{Binding Converter={StaticResource ChartDataConverter}}" ArgumentDataMember="Name" >

                                                    <dxc:ValueDataMember Type="Value" Member="Value"/>
                                                </dxc:SeriesDataAdapter>
                                            </dxc:BarSeries.Data>
                                        </dxc:BarSeries>
                                    </dxc:ChartView.Series>
                                    <dxc:ChartView.AxisX>
                                        <dxc:QualitativeAxisX 
                              
                               />
                                    </dxc:ChartView.AxisX>
                                    <dxc:ChartView.AxisY >
                                        
                                        <dxc:NumericAxisY AutoRangeMode="Default" AlwaysShowZeroLevel="False" >
                                            <dxc:NumericAxisY.Range>
                                                <dxc:NumericRange VisualMin="-1" VisualMax="2"/>
                                            </dxc:NumericAxisY.Range>
                                            <dxc:NumericAxisY.LabelValueNotation >
                                                <dxc:AxisLabelEngineeringNotation >
                                                    
                                                </dxc:AxisLabelEngineeringNotation>
                                            </dxc:NumericAxisY.LabelValueNotation>
                                           
                                            <dxc:NumericAxisY.ConstantLines>
                                                <dxc:NumericConstantLine AxisValue="1.0" ShowBehind="True">
                                                    <dxc:NumericConstantLine.Style >
                                                        <dxc:ConstantLineStyle Stroke="Red"></dxc:ConstantLineStyle>
                                                    </dxc:NumericConstantLine.Style>
                                                    <dxc:NumericConstantLine.Title>
                                                        <dxc:ConstantLineTitle Text="1.0"></dxc:ConstantLineTitle>
                                                    </dxc:NumericConstantLine.Title>

                                                </dxc:NumericConstantLine>

                                            </dxc:NumericAxisY.ConstantLines>
                                            <dxc:NumericAxisY.Title>
                                                <dxc:AxisTitle Text="膜厚">
                                                    <dxc:AxisTitle.Style>
                                                        <dxc:TitleStyle>
                                                            <dxc:TitleStyle.TextStyle>
                                                                <dxc:TextStyle Size="11"/>
                                                            </dxc:TitleStyle.TextStyle>
                                                        </dxc:TitleStyle>
                                                    </dxc:AxisTitle.Style>
                                                </dxc:AxisTitle>
                                            </dxc:NumericAxisY.Title>
                                            <dxc:NumericAxisY.Label>
                                                <dxc:AxisLabel TextFormat="#.#" Position="Inside"/>
                                            </dxc:NumericAxisY.Label>
                                        </dxc:NumericAxisY>
                                    </dxc:ChartView.AxisY>
                                </dxc:ChartView>
                                                </Grid>
                                    </dx:DXBorder>
                                </Grid>
                            </DataTemplate>
                        </dx:DXCollectionView.ItemTemplate>
                    </dx:DXCollectionView>

        <dx:DXPopup x:Name="popup" BindingContext="{Binding DataControlContext.DataControlContext}"            
               AllowScrim="True"
               CloseOnScrimTap="True"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Stretch"
               Margin="0,0,0,0"
               CornerRadius="16">
                <VerticalStackLayout Padding="5,10,10,8" HorizontalOptions="Center">
                <Label FontSize="17"  TextColor="Blue" Text="{Binding CurrentSpool.SpoolNo, StringFormat='管番号：{0}'}"            
                Margin="24,16"
                HorizontalTextAlignment="Center" />

                    <dx:DXSeparator />

            
                    <dx:DXButton ButtonType="ToolButton" Content="編集        " WidthRequest="150"
             Icon="edit" 
             Clicked="EditClick" /> 
                    
                    <dx:DXButton ButtonType="ToolButton" Content="画像編集" WidthRequest="150"
             Icon="photo" 
             Clicked="PhotoEditClick" /> 
                    
                    
                    <dx:DXButton ButtonType="ToolButton" Content="削除         " WidthRequest="150"
             Icon="delete" 
             Clicked="DeleteClick" />

                    <dx:DXSeparator/>

                    <dx:DXButton ButtonType="ToolButton" Content="キャンセル" Clicked="DismissPopup"/>
                </VerticalStackLayout>
         
            </dx:DXPopup>
        </Grid>
 
</ContentPage>