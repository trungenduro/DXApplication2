<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DXApplication2.Views.SheetEditPage" 
           xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
                xmlns:dx="http://schemas.devexpress.com/maui"
             xmlns:converters="clr-namespace:DXApplication2.Converters"  
             BindingContextChanged="ContentPage_BindingContextChanged"
             xmlns:views="clr-namespace:DXApplication2.Views;assembly=DXApplication2"
              xmlns:dxc="clr-namespace:DevExpress.Maui.Charts;assembly=DevExpress.Maui.Charts"
             Title="{Binding Item.SheetNo,StringFormat='シートNo.{0}'}">
    <ContentPage.Resources>
        <converters:SpoolToImageConverter x:Key="ImageEnumConverter" />
        <converters:SpoolToChartDataConverter x:Key="ChartDataConverter" />
        <converters:SpoolToIconConverter x:Key="SpoolIcon" />
        <converters:ListIndexConverter x:Key="ListConvert" />
        <converters:SheetNumberConverter x:Key="SheetNoConvert" />
     
            <dxc:SeriesCrosshairOptions x:Key="lineSeriesHintOptions"
                               PointTextPattern="{}{S}: {V}M"
                               ShowInLabel="True"
                               AxisLabelVisible="True"
                               AxisLineVisible="True"/>
      
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
       
        <ToolbarItem Text="管追加" IconImageSource="addSpool.svg" Command="{Binding Source={x:Reference spoolGrid}, Path=Commands.ShowDetailNewItemForm}" />
        <!--<ToolbarItem Text="Delete" IconImageSource="delete.png" Command="{Binding DeleteCommand}"/>-->
        <ToolbarItem Text="Save" IconImageSource="save.svg" Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>
  
        <Grid >
        <ScrollView VerticalScrollBarVisibility="Never">
            <VerticalStackLayout Padding="8,0,8,0" Spacing="0"  >
                <dx:SlideView x:Name="slider">
                    <dx:SlideView.Items>


                        <Grid>

                            <dx:DXButton WidthRequest="40" HeightRequest="40" HorizontalOptions="End" VerticalOptions="Start" ZIndex="2" IconWidth="24" IconHeight="24" Margin="-0,0,00,0" Icon="edit.png"  ButtonType="Text" 
                                      Command="{Binding Source={x:Reference slider}, Path=Commands.ShowNext}"   
                                         ></dx:DXButton>
                        <VerticalStackLayout >
                          
                            <Border  Stroke="Gray"  Padding="5,0,5,5">
                        <VerticalStackLayout>
                        <Label Text="ライニング検査成績表" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />


                        <Grid Margin="0,10,0,0" ColumnDefinitions="1.5*, *,*,*" ColumnSpacing="5"  >
                                        <Border  Stroke="White" Padding="0"  VerticalOptions="Start" Grid.Column="0" >
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center" VerticalOptions="Start" Grid.Column="0" Text="{Binding DataControlContext.DataControlContext.CurrentOrder.CombineName,StringFormat='{0}  殿'}" />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="10,00" />
                                                    <Label    HorizontalOptions="Center"  Grid.Column="0" Text="{Binding Source={x:Reference checkday1}, Path=Date,StringFormat='{0:yyyy/MM/dd}'}" />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="10,0" />

                                </VerticalStackLayout>
                            </Border>
                            
                            <Border  Stroke="Gray" Padding="0"  VerticalOptions="Start" Grid.Column="1" >
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Start" Grid.Column="0" Text="入荷日" />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,0" />
                                                    <Label  MinimumHeightRequest="50" VerticalTextAlignment="Center" HorizontalOptions="Center" Text="{Binding Source={x:Reference checkday2}, Path=Date,StringFormat='{0:yyyy/MM/dd}'}"  />

                                </VerticalStackLayout>                                
                            </Border>
                                        <Border  Stroke="Gray" Padding="0"  VerticalOptions="Start" Grid.Column="2" >
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center" FontAttributes="Bold"  VerticalOptions="Start" Grid.Column="0" Text="検査員" />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,0" />
                                    <Label MinimumHeightRequest="50" HorizontalOptions="Center" VerticalTextAlignment="Center" Grid.Column="0" Text="{Binding Item.Checker}" />

                                </VerticalStackLayout>                                
                            </Border>
                                        <Border  Stroke="Gray" Padding="0"  VerticalOptions="Start" Grid.Column="3" >
                                <VerticalStackLayout>
                                    <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Start" Grid.Column="0" Text="品証" />
                                    <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,0" />
                                    <Label MinimumHeightRequest="50" HorizontalOptions="Center" VerticalTextAlignment="Center" Grid.Column="0" Text="{Binding Item.Checked}" />

                                </VerticalStackLayout>                                
                            </Border>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
                            <Border  Stroke="Gray"  Padding="0">
                  
                        
                        <VerticalStackLayout>
                            <Grid Margin="0,0,0,0" RowDefinitions="*,*" ColumnDefinitions="*, *,*,*" ColumnSpacing="0"  >
                                <BoxView BackgroundColor="Gray" HeightRequest="1" VerticalOptions="End" Grid.ColumnSpan="10" ></BoxView>

                                <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2"/>
                                <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Column="1"/>
                                <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Column="2"/>


                                <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" Text="ポリ" />                                    
                               
                                <Label Grid.Row="1"  HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HeightRequest="30"  Text="{Binding Item.LinningType}" />
                            
                                <Label Grid.Row="1" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HeightRequest="30"
                                       Text="{Binding Item.ThickNess,StringFormat='{0} mm以上'}" />
                            
                                <Label Grid.Row="0" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" HeightRequest="30"  
                                       Text="{Binding DataControlContext.DataControlContext.CurrentOrder.OrderNo}" />


                                <Label  HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="1" Text="数量" />
                                <Label    HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="2" Grid.Row="1" Text="指定膜厚" />

                                <Label Grid.Column="1" Grid.Row="1" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" >
                                    <Label.Text>
                                        <MultiBinding Converter="{StaticResource  SheetNoConvert }">
                                            <Binding Path="Item.SpoolsCount"  />
                                            <Binding Path="DataControlContext.DataControlContext.CurrentOrder.Total"  />
                                        </MultiBinding>
                                    </Label.Text>
                                </Label>



                                <Label  HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="2" Text="DHF O/#" />
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                            <Border Stroke="Gray"  Padding="0">



                                <Grid Margin="0,0,0,0"  ColumnDefinitions="3*,22,*" ColumnSpacing="0"  >
                                    <BoxView BackgroundColor="Gray" HeightRequest="1" VerticalOptions="End" Grid.ColumnSpan="10" ></BoxView>

                                    <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2"/>
                                    <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Column="1"/>
                                    <BoxView BackgroundColor="Gray" WidthRequest="1" HorizontalOptions="End" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Column="2"/>
                                    <Label HorizontalOptions="Center" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="1" Text=" 総合判定" />
                                    <VerticalStackLayout Spacing="0">
                                        <Label HorizontalOptions="Start" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" Text=" 検査使用機器名" />
                                        <HorizontalStackLayout>

                                            <Label  HorizontalOptions="Start" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" Text="       １．ピンホール検査   " />
                                            <Label  Text="{Binding Source={x:Reference kiki1},Path=Text,StringFormat='LP-0{0}'}" />
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Margin="0,0,0,0">
                                            <Label HorizontalOptions="Start" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" Text="                検査電圧   " />

                                                <Label Text="{Binding Source={x:Reference op1},Path=SelectedValue}"  Background="AliceBlue" Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" >
                                               
                                            </Label>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Margin="0,0,0,0">
                                            <Label HorizontalOptions="Start" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="0" Text="       ２．膜厚検査    " />
                                                <Label   Text="{Binding Source={x:Reference kiki2},Path=Text,StringFormat='LP-0{0}'}"   />
                                        </HorizontalStackLayout>
                                        <Label Margin="55,0,0,0" Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" >
                                            <Label.Text>
                                                <MultiBinding Converter="{StaticResource  ListConvert }">
                                                    <Binding Path="DataControlContext.DataControlContext.Options2"  />
                                                    <Binding Path="Item.Option2"  />
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                    </VerticalStackLayout>

                                </Grid>

                            </Border>    
                       </VerticalStackLayout>
                        </Grid>
                        <VerticalStackLayout>
                            <dx:DXStackLayout ItemSpacing="24" Margin="16">
                                <dx:DXStackLayout ItemSpacing="8">
                                    <Grid ColumnDefinitions="*,*">

                                        <dx:DateEdit x:Name="checkday1" LabelText="検査日" Date="{Binding Item.CheckDate1}" DisplayFormat="yyyy/MM/dd" />
                                        <dx:DateEdit x:Name="checkday2" Margin="10,0,0,0" Grid.Column="1" LabelText="原管入荷日" DisplayFormat="yyyy/MM/dd" Date="{Binding Item.CheckDate2,StringFormat='{yyyy/dd/mm}'}" />
                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <dx:ComboBoxEdit TextHorizontalAlignment="Center" TextVerticalAlignment="Center"   LabelText="ポリエチレンライニング" ItemsSource="{Binding DataControlContext.DataControlContext.LinningType}"  SelectedValue="{Binding Item.LinningType}" />
                                        <dx:TextEdit Margin="10,0,0,0" Grid.Column="1" LabelText="指定膜厚" Suffix="mm以上" Keyboard="Numeric"  Text="{Binding Item.ThickNess}" />
                                    </Grid>

                                    <Grid ColumnDefinitions="1*,*">
                                        <dx:TextEdit x:Name="kiki1" LabelFontSize="12"   TextFontSize="16"  Keyboard="Numeric" LabelText="ピンホール検査機器名" Text="{Binding Item.Kiki1}" Prefix="LP-0" Mask=""  />

                                      
                                        <dx:ComboBoxEdit x:Name="op1" MinimumWidthRequest="170" Margin="10,0,0,0" Grid.Column="1"  BoxPadding="20" TextVerticalAlignment="Center" LabelText="検査電圧" ItemsSource="{Binding DataControlContext.DataControlContext.Options1}"  SelectedIndex="{Binding Item.Option1}" />




                                    </Grid>
                                    <Grid ColumnDefinitions="*,*">
                                        <dx:TextEdit x:Name="kiki2" LabelText="膜厚検査機器名" Keyboard="Numeric" Text="{Binding Item.Kiki2}" Prefix="LP-0" Mask="00"  />
                                        <HorizontalStackLayout Grid.Column="1" Margin="10,0,0,0">
                                            <!--<Label VerticalOptions="Center" Text=" "></Label>
                        <dxe:ChoiceChipGroup  ChipFontSize="15" SelectedIndex="{Binding Item.Option2}" HorizontalOptions="Center" ChipCornerRadius="0" ChipSelectedDisabledIconColor="Red" 
                                             DisplayMember="Name"  BoxMode="Outlined" IsMultiline="True"
                        ItemsSource="{Binding DataControlContext.DataControlContext.Options2}"  >           
                        </dxe:ChoiceChipGroup>-->

                                        </HorizontalStackLayout>
                                        <dx:ComboBoxEdit x:Name="op2" Margin="10,0,0,0" MinimumWidthRequest="170" Grid.Column="1" TextFontSize="16"  BoxPadding="10" TextVerticalAlignment="Center" LabelText="膜厚検査機器" ItemsSource="{Binding DataControlContext.DataControlContext.Options2}"  SelectedIndex="{Binding Item.Option2}" />

                                    </Grid>


                                    <Grid ColumnDefinitions="*,*">
                                        <dx:TokenEdit x:Name="checkerList1"  LabelText="検査員" DisplayMember="Name"  ItemsSource="{Binding DataControlContext.DataControlContext.Peoples}" ></dx:TokenEdit>
                                        <dx:ComboBoxEdit SelectedValue="{Binding Item.Checked}" x:Name="checkerList2" Margin="10,0,0,0" Grid.Column="1"  LabelText="品証" DisplayMember="Name"  ItemsSource="{Binding DataControlContext.DataControlContext.Peoples}" ></dx:ComboBoxEdit>

                                    </Grid>

                                </dx:DXStackLayout>

                              
                            </dx:DXStackLayout>
                            <dx:DXButton Content="OK" HorizontalOptions="Center" VerticalOptions="Start" ZIndex="2" IconWidth="24" IconHeight="24" Margin="-0,0,00,0"   ButtonType="Filled" 
             Command="{Binding Source={x:Reference slider}, Path=Commands.ShowPrevious}"   
                ></dx:DXButton>
                        </VerticalStackLayout>
                    </dx:SlideView.Items>
                </dx:SlideView>
                
                
        <dx:DXCollectionView x:Name="spoolGrid" ItemsSource="{Binding Item.Spools}" DetailEditFormTemplate="{DataTemplate views:EditSpoolPage}" 
                                 ItemSpanCount="1" ValidateAndSave="collectionView_ValidateAndSave" 
                                 Tap="spoolGrid_Tap" IsScrollBarVisible="False" 
                                 DetailNewItemFormTemplate="{DataTemplate views:NewSpoolPage}" >
                        <dx:DXCollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid >
                                    <Grid>
                            <Image Margin="5" VerticalOptions="Start" WidthRequest="30" HeightRequest="30" HorizontalOptions="Start"  Source="{Binding Converter={StaticResource SpoolIcon}}"></Image>
                            <dx:DXToolbar Padding="0" HeightRequest="30" Margin="0,-15,0,0" BackgroundColor="Transparent" WidthRequest="30" HorizontalOptions="End">
                                            <dx:ToolbarButton Padding="0"  WidthRequest="30" Margin="-5,10,5,5" HeightRequest="30" VerticalContentAlignment="End"   Icon="edit.png"  FontSize="10" 
Command="{Binding Source={x:Reference spoolGrid}, Path=Commands.ShowDetailEditForm}" 
CommandParameter="{Binding .}"
/>
                                            <!--<dx:ToolbarButton Content="{Binding Source={RelativeSource AncestorType=ContentPage},Path=BindingContext.DataControlContext}"                                       
CommandParameter="{Binding .}"                                        />-->

                                        </dx:DXToolbar>

                                    </Grid>
                                <dx:DXBorder BorderColor="Red" BorderThickness="2" VerticalOptions="Start"
CornerRadius="5"
Padding="0"
Margin="1">
                                    <Grid  MinimumHeightRequest="150" ColumnDefinitions="2*,5*,0*" RowDefinitions="*,6*,0.5*">
                                        <Grid.Resources>
                                            <Style TargetType="dx:TextEdit">
                                                <Setter Property="BackgroundColor" Value="WhiteSmoke"></Setter>
                                                <Setter Property="BorderThickness" Value="1"></Setter>
                                                <Setter Property="BorderColor" Value="Black"></Setter>
                                                <Setter Property="Margin" Value="1,1,1,1"></Setter>
                                                <Setter Property="TextVerticalAlignment" Value="Center"></Setter>
                                                <Setter Property="BoxPadding" Value="0,0,0,0"></Setter>
                                            </Style>
                                        </Grid.Resources>

                                        <Grid Grid.Row="1"   />


                                        <dx:TextEdit HeightRequest="35" HorizontalOptions="Fill" BoxPadding="10,0,0,0" Text="{Binding SpoolNo}" ClearIconVisibility="Never" Grid.ColumnSpan="1"  />
                                        <dx:TextEdit Grid.Column="1"  HeightRequest="35" HorizontalOptions="Fill" BoxPadding="10,0,0,0" Text="{Binding Size}" ClearIconVisibility="Never" Grid.ColumnSpan="1"  />



                                        <Image Grid.Row="1"  Source="{Binding  Converter={StaticResource ImageEnumConverter}}" />

                                        <!--<Label Padding="0" Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="良" FontSize="15" FontAttributes="Bold"/>-->
                                        <dx:ComboBoxEdit Margin="5,0,0,0"  BorderThickness="0" BoxPadding="0,0,0,0"  Grid.Row="2" VerticalOptions="End" LabelText="外観" HeightRequest="50" Grid.RowSpan="1" TextHorizontalAlignment="Center"   TextVerticalAlignment="Center" SelectedValue="{Binding Item.CheckShape}">
                                            <dx:ComboBoxEdit.ItemsSource>
                                                <x:Array Type="{x:Type x:String}">
                                                    <x:String>-</x:String>
                                                    <x:String>良</x:String>
                                                    <x:String>不良</x:String>
                                                </x:Array>
                                            </dx:ComboBoxEdit.ItemsSource>
                                        </dx:ComboBoxEdit>


                                        <Grid  x:Name="numberGrid" BackgroundColor="LightBlue" Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" RowDefinitions="*,*,*,*,*,*" ColumnDefinitions="*,*,*,*,*,*">

                                            <Label Padding="0" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="A" FontSize="15" FontAttributes="Bold"/>
                                            <Label Padding="0" Grid.Column="1" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="B" FontSize="15" FontAttributes="Bold"/>
                                            <Label Padding="0" Grid.Column="2" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="C" FontSize="15" FontAttributes="Bold"/>
                                            <Label Padding="0" Grid.Column="3" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="D" FontSize="15" FontAttributes="Bold"/>
                                            <Label Padding="0" Grid.Column="4" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="E" FontSize="15" FontAttributes="Bold"/>

                                            <Label Grid.Row="5" Padding="0" Grid.Column="0" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="備考" FontSize="15" FontAttributes="Bold"/>

                                            <dx:TextEdit   Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding A1}" Grid.Column="0" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding A2}" Grid.Column="0" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding A3}" Grid.Column="0" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"   />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding A4}" Grid.Column="0" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"   />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" SemanticProperties.Hint="ddd" Text="{Binding B1}" Grid.Column="1" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never"  Text="{Binding B2}" Grid.Column="1" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"   />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never"  Text="{Binding B3}" Grid.Column="1" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"   />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never"  Text="{Binding B4}" Grid.Column="1" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"   />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding C1}" Grid.Column="2" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding C2}" Grid.Column="2" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding C3}" Grid.Column="2" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding C4}" Grid.Column="2" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding D1}" Grid.Column="3" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding D2}" Grid.Column="3" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding D3}" Grid.Column="3" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding D4}" Grid.Column="3" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding E1}" Grid.Column="4" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding E2}" Grid.Column="4" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding E3}" Grid.Column="4" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding E4}" Grid.Column="4" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding F1}" Grid.Column="5" Grid.Row="1" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding F2}" Grid.Column="5" Grid.Row="2" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed" ClearIconVisibility="Never" Text="{Binding F3}" Grid.Column="5" Grid.Row="3" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric"  />
                                            <dx:TextEdit Completed="TextEdit_Completed"  ClearIconVisibility="Never" Text="{Binding F4}" Grid.Column="5" Grid.Row="4" HeightRequest="30" TextHorizontalAlignment="Center" TextVerticalAlignment="Center" Keyboard="Numeric" />


                                            <dx:TextEdit HeightRequest="30" ClearIconVisibility="Never" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="6" BoxPadding="1" BorderThickness="0" Text="{ Binding MeMo}" VerticalOptions="Fill"/>

                                            <Label Padding="0" Grid.Column="5" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="F" FontSize="15" FontAttributes="Bold"/>


                                            <Border  ZIndex="-2" StrokeThickness="1" Stroke="White" Grid.Column="0" Grid.ColumnSpan="10"  Grid.Row="1"     />

                                            <Border  ZIndex="-2" StrokeThickness="1" Stroke="White" Grid.Column="0" Grid.ColumnSpan="10"  Grid.Row="3"     />
                                            <Border  ZIndex="-2" StrokeThickness="1" Stroke="White" Grid.Column="0" Grid.ColumnSpan="10"  Grid.Row="5"     />




                                        </Grid>

                                    </Grid>
                                </dx:DXBorder>
                            </Grid>
                            </DataTemplate>
                        </dx:DXCollectionView.ItemTemplate>
                    </dx:DXCollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <dx:DXPopup x:Name="popup" BindingContext="{Binding DataControlContext.DataControlContext}"            
               AllowScrim="True"
               CloseOnScrimTap="True"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Stretch"
               Margin="0,0,0,0"
               CornerRadius="16">
                <VerticalStackLayout Padding="5,10,10,8" HorizontalOptions="Center">
                <Label FontSize="17"  TextColor="Blue" Text="{Binding CurrentSpool.SpoolNo, StringFormat='管番号：{0}'}"            
                Margin="24,16"
                HorizontalTextAlignment="Center" />

                    <dx:DXSeparator />

            
                    <dx:DXButton ButtonType="ToolButton" Content="編集        " WidthRequest="150"
             Icon="edit" 
             Clicked="EditClick" /> 
                    
                    <dx:DXButton ButtonType="ToolButton" Content="画像編集" WidthRequest="150"
             Icon="photo" 
             Clicked="PhotoEditClick" /> 
                    
                    
                    <dx:DXButton ButtonType="ToolButton" Content="削除         " WidthRequest="150"
             Icon="delete" 
             Clicked="DeleteClick" />

                    <dx:DXSeparator/>

                    <dx:DXButton ButtonType="ToolButton" Content="キャンセル" Clicked="DismissPopup"/>
                </VerticalStackLayout>
         
            </dx:DXPopup>
        </Grid>
 
</ContentPage>